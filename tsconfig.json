{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",

    "baseUrl": "src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@interfaces/*": ["interfaces/*"],
      "@ZegoCloud/*": ["ZegoCloud/*"],
      "@src/*": ["*"]
    },

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
