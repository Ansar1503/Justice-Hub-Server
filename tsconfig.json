{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",

    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@application/*": ["src/shared/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@ZegoCloud/*": ["src/ZegoCloud/*"],
      "@src/*": ["src/*"]
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
